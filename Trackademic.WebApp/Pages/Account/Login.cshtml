@page "{handler?}"
@model Trackademic.WebApp.Pages.Account.LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trackademic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">

        <div class="left-panel">
            <img src="~/images/logo.png" class="logo" alt="Trackademic Logo">
        </div>

        <div class="right-panel">
            <h2 class="login-title">LOG IN</h2>

            <div class="role-buttons">
                <button id="studentBtn" class="role-btn" type="button"
                        onclick="window.location.href='/Account/Login/Student'">
                    STUDENT
                </button>
                <button id="teacherBtn" class="role-btn" type="button"
                        onclick="window.location.href='/Account/Login/Teacher'">
                    TEACHER
                </button>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger p-2">@Model.ErrorMessage</div>
                }

                <div class="form-group">
                    <label asp-for="Input.SchoolID">SCHOOL ID</label>
                    <input asp-for="Input.SchoolID" class="input-field" />
                    <span asp-validation-for="Input.SchoolID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Password">PASSWORD</label>
                    <div class="input-group">
                        <input asp-for="Input.Password" class="input-field" />
                        <button class="toggle-password" type="button">
                            <i class="bi bi-eye-slash"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <a asp-page="/Account/ForgotPassword" class="forgot-password">Forgot Password?</a>

                <button type="submit" class="login-btn">LOG IN</button>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // --- This script toggles the 'active' button ---
            const studentBtn = document.getElementById("studentBtn");
            const teacherBtn = document.getElementById("teacherBtn");
            const currentPath = window.location.pathname.toLowerCase();

            if (currentPath.includes('/teacher')) {
                teacherBtn.classList.add("active");
                studentBtn.classList.remove("active");
            } else {
                studentBtn.classList.add("active");
                teacherBtn.classList.remove("active");
            }

            // --- ADD THIS JAVASCRIPT FOR THE EYE ICON ---
            $(".toggle-password").on('click', function() {
                var icon = $(this).find('i');
                var input = $(this).prev('input'); // Get the input field

                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon.removeClass('bi-eye-slash').addClass('bi-eye');
                } else {
                    input.attr('type', 'password');
                    icon.removeClass('bi-eye').addClass('bi-eye-slash');
                }
            });
        });
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>