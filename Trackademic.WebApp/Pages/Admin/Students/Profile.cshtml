@page
@model Trackademic.WebApp.Pages.Admin.Students.ProfileModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Student Profile";
}

<style>
    /* ... (All your existing CSS styles remain here) ... */
    .profile-pic-placeholder {
        width: 150px;
        height: 150px;
        background-color: #e9ecef;
        border: 1px solid #ced4da;
        border-radius: 50%;
        margin: 0 auto 10px auto;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        font-size: 0.9rem;
    }

    /* --- "UPDATE PROFILE" BUTTON --- */
    .btn-update-profile {
        background-color: #1b6ec2; 
        border-color: #1b6ec2;
        color: #ffffff;
        border-radius: 150px;
        height: 50px;
        width: 200px;
    }

        .btn-update-profile:hover {
            background-color: #155bb5;
            border-color: #155bb5;
            color: #ffffff;
        }

    /* --- "DISCARD CHANGES" BUTTON (UPDATED) --- */
    .btn-discard-changes {
        background-color: #dc3545; 
        border-color: #dc3545;
        color: #ffffff;
        border-radius: 150px;
        height: 50px;
        width: 200px;
    }

        .btn-discard-changes:hover {
            background-color: #c82333;
            border-color: #c82333;
        }

    /* --- "UPLOAD PHOTO" BUTTON --- */
    .btn-upload-photo {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #ffffff;
        border-radius: 15px;
    }

        .btn-upload-photo:hover {
            background-color: #5a6268;
            border-color: #5a6268;
            color: #ffffff;
        }

    /* --- ICON STYLES --- */
    .card-header .bi {
        font-size: 1.5rem;
        vertical-align: middle;
    }

    /* --- HIDE/SHOW ELEMENTS BASED ON MODE (CSS Handles this primarily) --- */
    /* By default, hide upload/action buttons */
    #uploadPhotoContainer,
    #editActionButtons {
        display: none;
    }

    /* When in edit-mode, show them */
    .edit-mode #uploadPhotoContainer,
    .edit-mode #editActionButtons {
        display: block;
    }

    /* When in edit-mode, hide the 'Edit' button */
    .edit-mode #editProfileBtn {
        display: none;
    }

    /* When in view-mode, show the 'Edit' button */
    .view-mode #editProfileBtn {
        display: block;
    }

    /* --- INPUT BOX STYLING (UPDATED) --- */
    .form-control:disabled {
        background-color: #e9ecef; 
        opacity: 1; 
        cursor: not-allowed;
    }
</style>

<div class="row mt-4">

    <div class="col-lg-11 mx-auto">

        <div class="mb-4">
            <h2>Student Profile</h2>
            <p class="text-muted">View and manage your student credentials and account details.</p>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-@TempData["MessageType"] alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @* Ensure you add enctype="multipart/form-data" here when ready for photo upload *@
        <form method="post" id="profileForm" asp-page-handler="Update"> 

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-person me-2"></i> Basic Information
                    </h5>
                    <button type="button" id="editProfileBtn" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-pencil"></i> Edit
                    </button>
                </div>
                <div class="card-body">

                    <div class="text-center mb-3">
                        <div class="profile-pic-placeholder">
                            <span>(Profile)</span>
                        </div>
                        <div id="uploadPhotoContainer">
                            <label for="photoUpload" class="btn btn-sm btn-upload-photo">Upload Photo</label>
                            <input type="file" id="photoUpload" name="PhotoUpload" class="d-none">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Student.FirstName" class="form-label"></label>
                            <input type="text" class="form-control" asp-for="Student.FirstName">
                            <span asp-validation-for="Student.FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Student.LastName" class="form-label"></label>
                            <input type="text" class="form-control" asp-for="Student.LastName">
                            <span asp-validation-for="Student.LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Student.DateOfBirth" class="form-label"></label>
                            <input type="date" class="form-control" asp-for="Student.DateOfBirth">
                            <span asp-validation-for="Student.DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Student.ContactNumber" class="form-label"></label>
                            <input type="tel" class="form-control" asp-for="Student.ContactNumber">
                            <span asp-validation-for="Student.ContactNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Student.Email" class="form-label"></label>
                        <input type="email" class="form-control" asp-for="Student.Email">
                        <span asp-validation-for="Student.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Student.Address" class="form-label"></label>
                        <textarea class="form-control" rows="3" asp-for="Student.Address"></textarea>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-person-vcard me-2"></i> Student Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Student.StudentId" class="form-label"></label>
                            <input type="text" class="form-control" asp-for="Student.StudentId" disabled>
                        </div>
                        @* Department is a missing field here but required in registration; add it if needed for admin view *@
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-lock me-2"></i> Account Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Student.Username" class="form-label"></label>
                            <input type="text" class="form-control" asp-for="Student.Username">
                            <span asp-validation-for="Student.Username" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Student.Role" class="form-label"></label>
                            <input type="text" class="form-control" asp-for="Student.Role" disabled>
                        </div>
                    </div>

                    <div id="passwordFields" style="display: none;">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="password" class="form-label">New Password</label>
                                <input type="password" class="form-control" id="password">
                                <small class="text-muted">Leave blank to keep current password.</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="confirmPassword" class="form-label">Confirm New Password</label>
                                <input type="password" class="form-control" id="confirmPassword">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-end mb-4" id="editActionButtons">
                <button type="button" id="discardChangesBtn" class="btn btn-lg btn-discard-changes me-2">Discard Changes</button>
                <button type="submit" asp-page-handler="Update" class="btn btn-lg btn-update-profile">Update Profile</button>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {

            // --- SELECTORS ---
            const profileForm = $('#profileForm');
            const editProfileBtn = $('#editProfileBtn');
            const discardChangesBtn = $('#discardChangesBtn'); 
            const editActionButtons = $('#editActionButtons');
            const uploadPhotoContainer = $('#uploadPhotoContainer');
            const passwordFields = $('#passwordFields');

            // Get all inputs and textareas *except* the Student ID and Role (which are disabled)
            const formInputs = profileForm.find('input, textarea, select').not('#studentId').not('#studentRole');

            // --- FUNCTIONS ---
            function setViewMode() {
                formInputs.prop('disabled', true); 
                editProfileBtn.html('<i class="bi bi-pencil"></i> Edit'); 
                editActionButtons.hide();
                uploadPhotoContainer.hide();
                passwordFields.hide();
                profileForm.removeClass('edit-mode').addClass('view-mode');
            }

            function setEditMode() {
                formInputs.prop('disabled', false); 
                editProfileBtn.html('<i class="bi bi-x-lg"></i> Cancel'); 
                editActionButtons.show();
                uploadPhotoContainer.show();
                passwordFields.show();
                profileForm.removeClass('view-mode').addClass('edit-mode');
            }

            function handleCancelOrDiscard() {
                const shouldReload = window.confirm("Are you sure you want to discard changes? Any unsaved modifications will be lost.");

                if (shouldReload) {
                    location.reload();
                }
            }

            // --- PAGE LOAD ---
            setViewMode();

            // --- CLICK HANDLERS ---
            editProfileBtn.on('click', function () {
                if (profileForm.hasClass('view-mode')) {
                    setEditMode();
                } else {
                    handleCancelOrDiscard();
                }
            });

            discardChangesBtn.on('click', handleCancelOrDiscard);


            // --- Handle Validation Errors ---
            @if (!ViewContext.ModelState.IsValid)
            {
                        <text>
                            setEditMode();
                        </text>
            }
        });
    </script>
}