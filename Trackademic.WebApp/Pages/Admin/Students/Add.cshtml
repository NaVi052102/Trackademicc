@page
@model Trackademic.WebApp.Pages.Admin.Students.AddModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "StudentRegistration";
}

<style>
    /* A little custom style to center the placeholder */
    .profile-pic-placeholder {
        width: 150px;
        height: 150px;
        background-color: #e9ecef;
        border: 1px solid #ced4da;
        border-radius: 50%;
        margin: 0 auto 10px auto;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        font-size: 0.9rem;
    }

    .btn-create-student {
        /* This makes the button gray */
        background-color: #6c757d;
        border-color: #6c757d;
        color: #ffffff;
        border-radius: 150px;
        height: 50px;
        width: 300px;
    }

        .btn-create-student:hover {
            /* This is the new, lighter green on hover */
            background-color: #28a745;
            border-color: #28a745;
            color: #ffffff;
        }

    .btn-upload-photo {
        /* This makes the button gray */
        background-color: #6c757d;
        border-color: #6c757d;
        color: #ffffff;
        /* This adds the rounded corners */
        border-radius: 15px;
    }

        .btn-upload-photo:hover {
            /* This makes the button green on hover */
            background-color: #28a745;
            border-color: #28a745;
            color: #ffffff;
        }

    /* --- THIS IS THE NEW CSS FOR YOUR ICONS --- */
    .card-header .bi {
        font-size: 1.5rem;
        vertical-align: middle;
    }
</style>

<div class="row mt-4">

    <div class="col-lg-11 mx-auto">

        <div class="mb-4">
            <h2>Student Profile Registration</h2>
            <p class="text-muted">Please provide the student's credentials and account details.</p>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-@TempData["MessageType"] alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <form method="post" enctype="multipart/form-data">

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-person me-2"></i>
                        Basic Information
                    </h5>
                </div>
                <div class="card-body">

                    <div class="text-center mb-3">
                        <div class="profile-pic-placeholder">
                            <span>(Profile)</span>
                        </div>
                        
                        <label for="photoUpload" class="btn btn-sm btn-upload-photo">Upload Photo</label>
                        <input type="file" id="photoUpload" asp-for="StudentInput.PhotoUpload" class="d-none">
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StudentInput.FirstName" class="form-label"></label>
                            <input type="text" class="form-control" asp-for="StudentInput.FirstName">
                            <span asp-validation-for="StudentInput.FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="StudentInput.LastName" class="form-label"></label>
                            <input type="text" class="form-control" asp-for="StudentInput.LastName">
                            <span asp-validation-for="StudentInput.LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StudentInput.DateOfBirth" class="form-label"></label>
                            <input type="date" class="form-control" asp-for="StudentInput.DateOfBirth">
                            <span asp-validation-for="StudentInput.DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="StudentInput.ContactNumber" class="form-label"></label>
                            <input type="tel" class="form-control" asp-for="StudentInput.ContactNumber">
                            <span asp-validation-for="StudentInput.ContactNumber" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="StudentInput.Email" class="form-label"></label>
                        <input type="email" class="form-control" asp-for="StudentInput.Email">
                        <span asp-validation-for="StudentInput.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="StudentInput.Address" class="form-label"></label>
                        <textarea class="form-control" rows="3" asp-for="StudentInput.Address"></textarea>
                        <span asp-validation-for="StudentInput.Address" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-person-vcard me-2"></i>
                        Student Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StudentInput.StudentNumber" class="form-label"></label>
                            <input type="text" class="form-control" asp-for="StudentInput.StudentNumber">
                            <span asp-validation-for="StudentInput.StudentNumber" class="text-danger"></span>
                        </div>

                        @* NEW FIELD: Department Dropdown *@
                        <div class="col-md-6 mb-3">
                            <label asp-for="StudentInput.DepartmentId" class="form-label">Department / Program</label>
                            <select class="form-control" asp-for="StudentInput.DepartmentId" asp-items="Model.Departments">
                                <option value="">-- Select Department --</option>
                            </select>
                            <span asp-validation-for="StudentInput.DepartmentId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-lock me-2"></i>
                        Account Information
                    </h5>
                </div>
                <div class="card-body">
                    <input type="hidden" asp-for="StudentInput.UserType" />
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StudentInput.Username" class="form-label"></label>
                            <input type="text" class="form-control" asp-for="StudentInput.Username">
                            <span asp-validation-for="StudentInput.Username" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="userRole" class="form-label">Account Role</label>
                            <input type="text" class="form-control" id="userRole" value="Student" readonly>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StudentInput.Password" class="form-label"></label>
                            <input type="password" class="form-control" asp-for="StudentInput.Password">
                            <span asp-validation-for="StudentInput.Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="StudentInput.ConfirmPassword" class="form-label"></label>
                            <input type="password" class="form-control" asp-for="StudentInput.ConfirmPassword">
                            <span asp-validation-for="StudentInput.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-end mb-4">
                <button type="submit" class="btn btn-lg btn-create-student">Create Student Account</button>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}