@page
@model Trackademic.WebApp.Pages.Admin.Students.AddModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Student Registration";
}

<style>
    .profile-pic-placeholder {
        width: 150px;
        height: 150px;
        background-color: #e9ecef;
        border: 1px solid #ced4da;
        border-radius: 50%;
        margin: 0 auto 10px auto;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        font-size: 0.9rem;
        overflow: hidden;
    }

        .profile-pic-placeholder img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .btn-create-student {
        background-color: #000;
        border-color: #000;
        color: #ffffff;
        border-radius: 150px;
        height: 50px;
        width: 300px;
        transition: all 0.3s;
    }

        .btn-create-student:hover {
            background-color: #333;
            border-color: #333;
            color: #ffffff;
            transform: translateY(-2px);
        }

    .btn-upload-photo {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #ffffff;
        border-radius: 15px;
    }

        .btn-upload-photo:hover {
            background-color: #5a6268;
            border-color: #545b62;
            color: white;
        }
</style>

<div class="row mt-4">
    <div class="col-lg-11 mx-auto">

        <div class="mb-4">
            <h2>Student Profile Registration</h2>
            <p class="text-muted">Please provide the student's credentials and account details.</p>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-@TempData["MessageType"] alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post" enctype="multipart/form-data">
            <!-- Hidden User Type -->
            <input type="hidden" asp-for="StudentInput.UserType" />

            <!-- --- BASIC INFO --- -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-person me-2"></i> Basic Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="profile-pic-placeholder" id="imagePreview">
                            <span>(Profile)</span>
                        </div>

                        <!-- Added Red Asterisk to indicate Requirement -->
                        <label for="photoUpload" class="btn btn-sm btn-upload-photo cursor-pointer">
                            <i class="bi bi-upload me-1"></i> Upload Photo <span class="text-danger fw-bold">*</span>
                        </label>

                        <input type="file" id="photoUpload" asp-for="StudentInput.PhotoUpload" class="d-none" accept="image/*" onchange="previewImage(this)">

                        <!-- Added Validation Message Span -->
                        <span asp-validation-for="StudentInput.PhotoUpload" class="text-danger d-block mt-2 small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="StudentInput.FirstName" class="form-label">First Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" asp-for="StudentInput.FirstName" placeholder="e.g. John">
                            <span asp-validation-for="StudentInput.FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="StudentInput.LastName" class="form-label">Last Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" asp-for="StudentInput.LastName" placeholder="e.g. Doe">
                            <span asp-validation-for="StudentInput.LastName" class="text-danger"></span>
                        </div>
                        <!-- GENDER -->
                        <div class="col-md-4 mb-3">
                            <label asp-for="StudentInput.Gender" class="form-label">Gender <span class="text-danger">*</span></label>
                            <select class="form-select" asp-for="StudentInput.Gender" asp-items="Model.GenderOptions">
                                <option value="">-- Select --</option>
                            </select>
                            <span asp-validation-for="StudentInput.Gender" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StudentInput.DateOfBirth" class="form-label">Date of Birth <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" asp-for="StudentInput.DateOfBirth">
                            <span asp-validation-for="StudentInput.DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="StudentInput.ContactNumber" class="form-label">Contact Number <span class="text-danger">*</span></label>
                            <input type="tel" class="form-control" asp-for="StudentInput.ContactNumber" placeholder="09123456789">
                            <span asp-validation-for="StudentInput.ContactNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="StudentInput.Email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" asp-for="StudentInput.Email" placeholder="student@trackademic.edu">
                        <span asp-validation-for="StudentInput.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="StudentInput.Address" class="form-label">Address</label>
                        <textarea class="form-control" rows="2" asp-for="StudentInput.Address" placeholder="Complete home address"></textarea>
                        <span asp-validation-for="StudentInput.Address" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- --- ACADEMIC DETAILS --- -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-mortarboard me-2"></i> Academic Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StudentInput.StudentNumber" class="form-label">Student ID Number <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" asp-for="StudentInput.StudentNumber" placeholder="e.g. S-2025-001">
                            <span asp-validation-for="StudentInput.StudentNumber" class="text-danger"></span>
                        </div>

                        <!-- COURSE/PROGRAM -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="StudentInput.CourseProgram" class="form-label">Course / Program <span class="text-danger">*</span></label>
                            <select class="form-select" asp-for="StudentInput.CourseProgram" asp-items="Model.Departments">
                                <option value="">-- Select Program --</option>
                            </select>
                            <span asp-validation-for="StudentInput.CourseProgram" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <!-- YEAR LEVEL -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="StudentInput.YearLevel" class="form-label">Year Level <span class="text-danger">*</span></label>
                            <select class="form-select" asp-for="StudentInput.YearLevel" asp-items="Model.YearLevelOptions">
                                <option value="">-- Select Year --</option>
                            </select>
                            <span asp-validation-for="StudentInput.YearLevel" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- --- ACCOUNT CREDENTIALS --- -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-lock me-2"></i> Account Credentials
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StudentInput.Username" class="form-label">Username <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" asp-for="StudentInput.Username" placeholder="Unique username for login">
                            <span asp-validation-for="StudentInput.Username" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Account Role</label>
                            <input type="text" class="form-control bg-light" value="Student" readonly>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StudentInput.Password" class="form-label">Password <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" asp-for="StudentInput.Password">
                            <span asp-validation-for="StudentInput.Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="StudentInput.ConfirmPassword" class="form-label">Confirm Password <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" asp-for="StudentInput.ConfirmPassword">
                            <span asp-validation-for="StudentInput.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-end mb-4">
                <button type="submit" class="btn btn-lg btn-create-student">
                    <i class="bi bi-check-lg me-2"></i> Create Student Account
                </button>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        //To preview the uploaded image
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    var placeholder = document.getElementById('imagePreview');
                    placeholder.innerHTML = '<img src="' + e.target.result + '" alt="Profile Preview" />';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}