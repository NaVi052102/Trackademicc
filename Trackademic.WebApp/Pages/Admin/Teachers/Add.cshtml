@page
@model Trackademic.WebApp.Pages.Admin.Teachers.AddModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Teacher Registration";
}

<style>
    /* A little custom style to center the placeholder */
    .profile-pic-placeholder {
        width: 150px;
        height: 150px;
        background-color: #e9ecef;
        border: 1px solid #ced4da;
        border-radius: 50%;
        margin: 0 auto 10px auto;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        font-size: 0.9rem;
    }

    /* --- UPDATED BUTTON CLASS --- */
    .btn-create-teacher {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #ffffff;
        border-radius: 150px;
        height: 50px;
        width: 300px;
    }

        .btn-create-teacher:hover {
            background-color: #28a745;
            border-color: #28a745;
            color: #ffffff;
        }

    .btn-upload-photo {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #ffffff;
        border-radius: 15px;
    }

        .btn-upload-photo:hover {
            background-color: #28a745;
            border-color: #28a745;
            color: #ffffff;
        }

    /* This CSS is for your icons */
    .card-header .bi {
        font-size: 1.5rem;
        vertical-align: middle;
    }
</style>

<div class="row mt-4">

    <div class="col-lg-11 mx-auto">

        <div class="mb-4">
            <h2>Teacher Registration</h2>
            <p class="text-muted">Please provide your teacher credentials and account details.</p>
        </div>
        
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-@TempData["MessageType"] alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @* IMPORTANT: Added enctype for file upload *@
        <form method="post" enctype="multipart/form-data"> 
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-person me-2"></i>
                        Basic Information
                    </h5>
                </div>
                <div class="card-body">

                    <div class="text-center mb-3">
                        <div class="profile-pic-placeholder">
                            <span>(Profile)</span>
                        </div>
                        <label for="photoUpload" class="btn btn-sm btn-upload-photo">Upload Photo</label>
                        @* Binding file input to PhotoUpload IFormFile property *@
                        <input type="file" id="photoUpload" asp-for="TeacherInput.PhotoUpload" class="d-none">
                    </div>

                    <div class="row">
                        @* SPLIT NAME FIELD *@
                        <div class="col-md-6 mb-3">
                            <label asp-for="TeacherInput.FirstName" class="form-label"></label>
                            <input asp-for="TeacherInput.FirstName" class="form-control" />
                            <span asp-validation-for="TeacherInput.FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TeacherInput.LastName" class="form-label"></label>
                            <input asp-for="TeacherInput.LastName" class="form-control" />
                            <span asp-validation-for="TeacherInput.LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TeacherInput.DateOfBirth" class="form-label"></label>
                            <input type="date" asp-for="TeacherInput.DateOfBirth" class="form-control" />
                            <span asp-validation-for="TeacherInput.DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TeacherInput.ContactNumber" class="form-label"></label>
                            <input type="tel" asp-for="TeacherInput.ContactNumber" class="form-control" />
                            <span asp-validation-for="TeacherInput.ContactNumber" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="TeacherInput.Email" class="form-label"></label>
                        <input type="email" asp-for="TeacherInput.Email" class="form-control" />
                        <span asp-validation-for="TeacherInput.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TeacherInput.Address" class="form-label"></label>
                        <textarea asp-for="TeacherInput.Address" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="TeacherInput.Address" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-person-vcard me-2"></i>
                        Teacher Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TeacherInput.TeacherId" class="form-label"></label>
                            <input asp-for="TeacherInput.TeacherId" class="form-control" />
                            <span asp-validation-for="TeacherInput.TeacherId" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="TeacherInput.DepartmentId" class="form-label">Department</label>
                            @* Dropdown bound to DepartmentId (Foreign Key) *@
                            <select asp-for="TeacherInput.DepartmentId" asp-items="Model.Departments" class="form-control">
                                <option value="">-- Select Department --</option>
                            </select>
                            <span asp-validation-for="TeacherInput.DepartmentId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-lock me-2"></i>
                        Account Information
                    </h5>
                </div>
                <div class="card-body">
                    <input type="hidden" asp-for="TeacherInput.UserType" />
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TeacherInput.Username" class="form-label"></label>
                            <input asp-for="TeacherInput.Username" class="form-control" />
                            <span asp-validation-for="TeacherInput.Username" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="RoleDisplay" class="form-label">Role</label>
                            <input id="RoleDisplay" class="form-control" value="Teacher" readonly />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TeacherInput.Password" class="form-label"></label>
                            <input asp-for="TeacherInput.Password" class="form-control" />
                            <span asp-validation-for="TeacherInput.Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TeacherInput.ConfirmPassword" class="form-label"></label>
                            <input asp-for="TeacherInput.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="TeacherInput.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-end mb-4">
                <button type="submit" class="btn btn-lg btn-create-teacher">Create Teacher Account</button>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}