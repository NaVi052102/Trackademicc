@page
@model Trackademic.WebApp.Pages.Admin.Teachers.AddModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Teacher Registration";
}

<style>
    .profile-pic-placeholder {
        width: 150px;
        height: 150px;
        background-color: #e9ecef;
        border: 1px solid #ced4da;
        border-radius: 50%;
        margin: 0 auto 10px auto;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        font-size: 0.9rem;
        overflow: hidden;
    }

        .profile-pic-placeholder img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .btn-create-teacher {
        background-color: #000; /* Trackademic Black */
        border-color: #000;
        color: #ffffff;
        border-radius: 150px;
        height: 50px;
        width: 300px;
        transition: all 0.3s;
    }

        .btn-create-teacher:hover {
            background-color: #333;
            border-color: #333;
            color: #ffffff;
            transform: translateY(-2px);
        }

    .btn-upload-photo {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #ffffff;
        border-radius: 15px;
    }

        .btn-upload-photo:hover {
            background-color: #5a6268;
            border-color: #545b62;
            color: white;
        }
</style>

<div class="row mt-4">
    <div class="col-lg-11 mx-auto">

        <div class="mb-4">
            <h2>Teacher Registration</h2>
            <p class="text-muted">Please provide teacher credentials and account details.</p>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-@TempData["MessageType"] alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post" enctype="multipart/form-data">
            <!-- Hidden User Type -->
            <input type="hidden" asp-for="TeacherInput.UserType" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- --- CARD 1: BASIC INFO --- -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-person me-2"></i> Basic Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="profile-pic-placeholder" id="imagePreview">
                            <span>(Profile)</span>
                        </div>

                        <label for="photoUpload" class="btn btn-sm btn-upload-photo cursor-pointer">
                            <i class="bi bi-upload me-1"></i> Upload Photo <span class="text-danger fw-bold">*</span>
                        </label>
                        <input type="file" id="photoUpload" asp-for="TeacherInput.PhotoUpload" class="d-none" accept="image/*" onchange="previewImage(this)">

                        <span asp-validation-for="TeacherInput.PhotoUpload" class="text-danger d-block mt-2 small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TeacherInput.FirstName" class="form-label">First Name <span class="text-danger">*</span></label>
                            <input asp-for="TeacherInput.FirstName" class="form-control" placeholder="e.g. Jane" />
                            <span asp-validation-for="TeacherInput.FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TeacherInput.LastName" class="form-label">Last Name <span class="text-danger">*</span></label>
                            <input asp-for="TeacherInput.LastName" class="form-control" placeholder="e.g. Smith" />
                            <span asp-validation-for="TeacherInput.LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TeacherInput.DateOfBirth" class="form-label">Date of Birth <span class="text-danger">*</span></label>
                            <input type="date" asp-for="TeacherInput.DateOfBirth" class="form-control" />
                            <span asp-validation-for="TeacherInput.DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TeacherInput.ContactNumber" class="form-label">Contact Number <span class="text-danger">*</span></label>
                            <input type="tel" asp-for="TeacherInput.ContactNumber" class="form-control" placeholder="09123456789" />
                            <span asp-validation-for="TeacherInput.ContactNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TeacherInput.Email" class="form-label">Email Address <span class="text-danger">*</span></label>
                        <input type="email" asp-for="TeacherInput.Email" class="form-control" placeholder="teacher@trackademic.edu" />
                        <span asp-validation-for="TeacherInput.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TeacherInput.Address" class="form-label">Address</label>
                        <textarea asp-for="TeacherInput.Address" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="TeacherInput.Address" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- --- CARD 2: TEACHER DETAILS --- -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-person-vcard me-2"></i> Teacher Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TeacherInput.TeacherId" class="form-label">Teacher ID <span class="text-danger">*</span></label>
                            <input asp-for="TeacherInput.TeacherId" class="form-control" placeholder="e.g. T-2025-001" />
                            <span asp-validation-for="TeacherInput.TeacherId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="TeacherInput.DepartmentId" class="form-label">Department <span class="text-danger">*</span></label>
                            <select asp-for="TeacherInput.DepartmentId" asp-items="Model.Departments" class="form-select">
                                <option value="">-- Select Department --</option>
                            </select>
                            <span asp-validation-for="TeacherInput.DepartmentId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- --- CARD 3: ACCOUNT CREDENTIALS --- -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-lock me-2"></i> Account Credentials
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TeacherInput.Username" class="form-label">Username <span class="text-danger">*</span></label>
                            <input asp-for="TeacherInput.Username" class="form-control" placeholder="Unique username" />
                            <span asp-validation-for="TeacherInput.Username" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Role</label>
                            <input class="form-control bg-light" value="Teacher" readonly />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TeacherInput.Password" class="form-label">Password <span class="text-danger">*</span></label>
                            <input type="password" asp-for="TeacherInput.Password" class="form-control" />
                            <span asp-validation-for="TeacherInput.Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TeacherInput.ConfirmPassword" class="form-label">Confirm Password <span class="text-danger">*</span></label>
                            <input type="password" asp-for="TeacherInput.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="TeacherInput.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-end mb-4">
                <button type="submit" class="btn btn-lg btn-create-teacher">
                    <i class="bi bi-check-lg me-2"></i> Create Teacher Account
                </button>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    var placeholder = document.getElementById('imagePreview');
                    placeholder.innerHTML = '<img src="' + e.target.result + '" alt="Profile Preview" />';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}