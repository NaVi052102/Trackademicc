@page "{id:long}"
@model Trackademic.WebApp.Pages.Admin.Teachers.ProfileModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Teacher Profile";
}

<style>
    .profile-pic-placeholder {
        width: 150px;
        height: 150px;
        background-color: #e9ecef;
        border: 1px solid #ced4da;
        border-radius: 50%;
        margin: 0 auto 10px auto;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        font-size: 0.9rem;
        overflow: hidden;
    }

        .profile-pic-placeholder img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .btn-update-profile {
        background-color: #1b6ec2;
        border-color: #1b6ec2;
        color: #ffffff;
        border-radius: 150px;
        height: 50px;
        width: 200px;
    }

        .btn-update-profile:hover {
            background-color: #155bb5;
            border-color: #155bb5;
            color: #ffffff;
        }

    .btn-discard-changes {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #ffffff;
        border-radius: 150px;
        height: 50px;
        width: 200px;
    }

        .btn-discard-changes:hover {
            background-color: #c82333;
            border-color: #c82333;
        }

    .btn-upload-photo {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #ffffff;
        border-radius: 15px;
    }

        .btn-upload-photo:hover {
            background-color: #5a6268;
            border-color: #545b62;
            color: #ffffff;
        }

    #uploadPhotoContainer, #editActionButtons {
        display: none;
    }

    .edit-mode #uploadPhotoContainer, .edit-mode #editActionButtons {
        display: block;
    }

    .edit-mode #editProfileBtn {
        display: none;
    }

    .view-mode #editProfileBtn {
        display: block;
    }

    .form-control:disabled {
        background-color: #e9ecef;
        opacity: 1;
        cursor: not-allowed;
    }
</style>

<div class="row mt-4">
    <div class="col-lg-11 mx-auto">

        <div class="mb-4">
            <h2>Teacher Profile</h2>
            <p class="text-muted">View and manage teacher credentials and account details.</p>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-@TempData["MessageType"] alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post" id="profileForm" asp-page-handler="Update" enctype="multipart/form-data">
            <!-- ID Binding for Backend -->
            <input type="hidden" asp-for="TargetId" />

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-person me-2"></i> Basic Information
                    </h5>
                    <button type="button" id="editProfileBtn" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-pencil"></i> Edit
                    </button>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="profile-pic-placeholder" id="imagePreview">
                            @if (!string.IsNullOrEmpty(Model.Teacher.ProfilePictureUrl))
                            {
                                <img src="@Model.Teacher.ProfilePictureUrl" alt="Profile" />
                            }
                            else
                            {
                                <span>(No Photo)</span>
                            }
                        </div>
                        <div id="uploadPhotoContainer">
                            <label for="photoUpload" class="btn btn-sm btn-upload-photo">Upload Photo</label>
                            <input type="file" id="photoUpload" asp-for="Teacher.PhotoUpload" class="d-none" accept="image/*" onchange="previewImage(this)">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Teacher.FirstName" class="form-label"></label>
                            <input type="text" class="form-control" asp-for="Teacher.FirstName">
                            <span asp-validation-for="Teacher.FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Teacher.LastName" class="form-label"></label>
                            <input type="text" class="form-control" asp-for="Teacher.LastName">
                            <span asp-validation-for="Teacher.LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Teacher.DateOfBirth" class="form-label"></label>
                            <input type="date" class="form-control" asp-for="Teacher.DateOfBirth">
                            <span asp-validation-for="Teacher.DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Teacher.ContactNumber" class="form-label"></label>
                            <input type="tel" class="form-control" asp-for="Teacher.ContactNumber">
                            <span asp-validation-for="Teacher.ContactNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Teacher.Email" class="form-label"></label>
                        <input type="email" class="form-control" asp-for="Teacher.Email">
                        <span asp-validation-for="Teacher.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Teacher.Address" class="form-label"></label>
                        <textarea class="form-control" rows="3" asp-for="Teacher.Address"></textarea>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-person-vcard me-2"></i> Teacher Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Teacher.TeacherId" class="form-label"></label>
                            <input type="text" class="form-control" asp-for="Teacher.TeacherId" readonly>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Teacher.DepartmentId" class="form-label">Department</label>
                            <select class="form-control" asp-for="Teacher.DepartmentId" asp-items="Model.Departments">
                                <option value="">-- Select --</option>
                            </select>
                            <span asp-validation-for="Teacher.DepartmentId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-lock me-2"></i> Account Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Teacher.Username" class="form-label"></label>
                            <input type="text" class="form-control" asp-for="Teacher.Username">
                            <span asp-validation-for="Teacher.Username" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Teacher.Role" class="form-label"></label>
                            <input type="text" class="form-control" asp-for="Teacher.Role" readonly>
                        </div>
                    </div>

                    <div id="passwordFields" style="display: none;">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Teacher.NewPassword" class="form-label"></label>
                                <!-- FIX: Bound to Teacher.NewPassword -->
                                <input type="password" class="form-control" asp-for="Teacher.NewPassword" placeholder="Leave blank to keep current">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Teacher.ConfirmNewPassword" class="form-label"></label>
                                <!-- FIX: Bound to Teacher.ConfirmNewPassword -->
                                <input type="password" class="form-control" asp-for="Teacher.ConfirmNewPassword">
                                <span asp-validation-for="Teacher.ConfirmNewPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-end mb-4" id="editActionButtons">
                <button type="submit" asp-page-handler="Discard" class="btn btn-lg btn-discard-changes me-2" formnovalidate>Discard Changes</button>
                <button type="submit" asp-page-handler="Update" class="btn btn-lg btn-update-profile">Update Profile</button>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    var placeholder = document.getElementById('imagePreview');
                    placeholder.innerHTML = '<img src="' + e.target.result + '" alt="Profile Preview" />';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        $(document).ready(function () {
            const profileForm = $('#profileForm');
            const editProfileBtn = $('#editProfileBtn');
            const discardChangesBtn = $('#discardChangesBtn');
            const editActionButtons = $('#editActionButtons');
            const uploadPhotoContainer = $('#uploadPhotoContainer');
            const passwordFields = $('#passwordFields');

            const formInputs = profileForm.find('input, textarea, select').not('[readonly]').not('[type="hidden"]');

            function setViewMode() {
                formInputs.prop('disabled', true);
                editProfileBtn.html('<i class="bi bi-pencil"></i> Edit');
                editActionButtons.hide();
                uploadPhotoContainer.hide();
                passwordFields.hide();
                profileForm.removeClass('edit-mode').addClass('view-mode');
            }

            function setEditMode() {
                formInputs.prop('disabled', false);
                editProfileBtn.html('<i class="bi bi-x-lg"></i> Cancel');
                editActionButtons.show();
                uploadPhotoContainer.show();
                passwordFields.show();
                profileForm.removeClass('view-mode').addClass('edit-mode');
            }

            function handleCancelOrDiscard() {
                if (confirm("Discard changes? Unsaved data will be lost.")) {
                    location.reload();
                }
            }

            // Initialize
            setViewMode();

            editProfileBtn.on('click', function () {
                if (profileForm.hasClass('view-mode')) {
                    setEditMode();
                } else {
                    handleCancelOrDiscard();
                }
            });

            discardChangesBtn.on('click', handleCancelOrDiscard);

            @if (!ViewContext.ModelState.IsValid)
            {
                    <text>setEditMode();</text>
            }
        });
    </script>
}