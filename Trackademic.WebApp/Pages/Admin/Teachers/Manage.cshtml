@page
@model Trackademic.WebApp.Pages.Admin.Teachers.ManageModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Manage Teachers";
}

<style>
    /* --- STYLE ADAPTATION --- */
    .teachers-container {
        padding: 1.5rem;
    }

    .teacher-filter-bar {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .filter-group {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .select-label {
        font-weight: 600;
        margin-right: 1rem;
        white-space: nowrap;
    }

    /* Additional styles for the filter button */
    .btn-apply-filters {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #ffffff;
    }

        .btn-apply-filters:hover {
            background-color: #28a745;
            border-color: #28a745;
        }

    /* Roster Table Styling */
    .teacher-list-table th {
        background-color: #6c757d;
        color: white;
        vertical-align: middle;
    }

    /* New admin-focused cell styles */
    .admin-info-cell {
        min-width: 180px;
    }
    
    .search-input {
        min-width: 250px;
    }
</style>

<div class="teachers-container">

    @* --- Global Filter and Search Bar --- *@
    <div class="teacher-filter-bar">
        <form method="get" class="d-flex flex-wrap align-items-center gap-4">

            @* Year and Semester Filters *@
            <div class="d-flex flex-wrap gap-4">
                <div class="filter-group">
                    <label for="SchoolYear" class="select-label">Year:</label>
                    <select asp-for="SchoolYear" asp-items="Model.SchoolYears" class="form-select" style="width: 120px;"></select>
                </div>

                <div class="filter-group">
                    <label for="Semester" class="select-label">Semester:</label>
                    <select asp-for="Semester" asp-items="Model.Semesters" class="form-select" style="width: 150px;"></select>
                </div>

                <div class="filter-group">
                    <label for="SortBy" class="select-label">Sort By:</label>
                    <select asp-for="SortBy" asp-items="Model.SortOptions" class="form-select" style="width: 150px;"></select>
                </div>
            </div>

            @* Search and Apply Button *@
            <div class="d-flex align-items-center flex-grow-1 justify-content-end gap-3">
                <div class="input-group search-input">
                    <input type="text" asp-for="SearchTerm" class="form-control" placeholder="Search by name or ID...">
                    @if (!string.IsNullOrEmpty(Model.SearchTerm))
                    {
                        <a asp-page="./ManageTeacher" class="btn btn-outline-danger" title="Clear Search">
                            <i class="bi bi-x-lg"></i>
                        </a>
                    }
                </div>

                <button type="submit" class="btn btn-sm btn-apply-filters">
                    <i class="bi bi-funnel me-1"></i> Apply Filters
                </button>
            </div>
        </form>
    </div>
    @* --- End Filter/Search Bar --- *@


    @* --- Teacher List Table --- *@
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0"><i class="bi bi-table me-2"></i> Teacher List (@Model.TeacherList.Count)</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover teacher-list-table mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Employee ID</th> 
                            <th>Full Name</th>
                            @* NEW ADMIN FIELDS *@
                            <th class="admin-info-cell">Department / Program</th> 
                            <th class="admin-info-cell">Contact Info</th> 
                            
                            <th>Employment Date</th> 
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.TeacherList.Any())
                        {
                            @for (int i = 0; i < Model.TeacherList.Count; i++)
                            {
                                var teacher = Model.TeacherList[i];
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@teacher.EmployeeID</td>
                                    <td>@teacher.FullName</td>
                                    
                                    @* NEW DATA CELLS *@
                                    <td>@teacher.Department</td>
                                    <td>@teacher.ContactInfo</td>
                                    
                                    <td>@teacher.EmploymentDate.ToShortDateString()</td> 

                                    <td class="text-center">
                                        <a asp-page="/Admin/Teachers/Profile" asp-route-id="@teacher.TeacherID" class="btn btn-sm btn-info text-white me-1">Details</a>
                                        <a asp-page="./Delete" asp-route-id="@teacher.TeacherID" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                @* Colspan is 6 now: #, ID, Name, Dept, Contact, Date, Actions (7 total columns)*@
                                <td colspan="7" class="text-center text-muted">No teachers match the current filters.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @* --- End Teacher List Table --- *@

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}