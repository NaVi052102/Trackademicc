@page
@model Trackademic.WebApp.Pages.Teachers.GradesModel
@{
    Layout = "_TeachersLayout";
    ViewData["Title"] = "Grading Sheet";
}

<div class="container mt-4">
    <h2>Grading Sheet</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-@TempData["MessageType"] alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card p-3 mb-4 bg-light">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">School Year</label>
                <select asp-for="SchoolYear" asp-items="Model.SchoolYears" class="form-select"></select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Semester</label>
                <select asp-for="Semester" asp-items="Model.Semesters" class="form-select"></select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Select Class</label>
                <select asp-for="ClassId" asp-items="Model.AvailableClasses" class="form-select" onchange="this.form.submit()">
                    <option value="">-- Select Class --</option>
                </select>
            </div>
        </form>
    </div>

    @if (Model.ClassId.HasValue && Model.ClassId.Value > 0)
    {
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@Model.SubjectDescription</h5>
                <span class="badge bg-light text-primary">@Model.GradesList.Count Students</span>
            </div>

            <div class="card-body">
                <form method="post" asp-page-handler="UpdateAll">
                    <input type="hidden" asp-for="SchoolYear" />
                    <input type="hidden" asp-for="Semester" />
                    <input type="hidden" asp-for="ClassId" />

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover align-middle">
                            <thead class="table-light text-center">
                                <tr>
                                    <th style="width: 15%">Student ID</th>
                                    <th style="width: 35%">Student Name</th>
                                    <th style="width: 15%">Midterm</th>
                                    <th style="width: 15%">Final</th>
                                    <th style="width: 15%">Average</th>
                                    <th style="width: 10%">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.GradesList.Count; i++)
                                {
                                    <tr>
                                        <input type="hidden" asp-for="GradesList[i].GradeId" />

                                        <td class="text-center">@Model.GradesList[i].StudentNumber</td>
                                        <td><strong>@Model.GradesList[i].StudentName</strong></td>

                                        <td>
                                            <input asp-for="GradesList[i].Midterm" type="number" step="0.1" min="1.0" max="5.0" class="form-control text-center" placeholder="0.0" />
                                        </td>
                                        <td>
                                            <input asp-for="GradesList[i].Final" type="number" step="0.1" min="1.0" max="5.0" class="form-control text-center" placeholder="0.0" />
                                        </td>

                                        <td class="text-center fw-bold">
                                            @(Model.GradesList[i].FinalScore?.ToString("0.0") ?? "-")
                                        </td>

                                        <td class="text-center">
                                            @if (Model.GradesList[i].FinalScore.HasValue && Model.GradesList[i].FinalScore > 0)
                                            {
                                                if (Model.GradesList[i].FinalScore <= 3.0m)
                                                {
                                                    <span class="badge bg-success">PASSED</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">FAILED</span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">N/A</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="text-end mt-3">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-save me-2"></i> Save Grades
                        </button>
                    </div>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            Please select a class to start grading.
        </div>
    }
</div>