@page
@model Trackademic.WebApp.Pages.Student.Profile.StudentProfileModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Student Profile";
}

<style>
    .profile-img-container {
        position: relative;
        display: inline-block;
        width: 150px;
        height: 150px;
        border-radius: 50%;
        overflow: hidden;
    }

    .profile-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        cursor: pointer;
    }

    .profile-img-container.editable:hover .profile-overlay {
        opacity: 1;
    }
</style>

<div class="container mt-4">
    <h2 class="mb-4">Student Profile</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-@TempData["MessageType"] alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm text-center p-4 h-100">
                <div class="mb-3">
                    <div id="profileImgWrapper" class="profile-img-container border shadow-sm mx-auto">
                        @if (!string.IsNullOrEmpty(Model.StudentProfile.ProfilePictureUrl))
                        {
                            <img id="avatarPreview"
                                 src="@Model.StudentProfile.ProfilePictureUrl"
                                 style="width: 100%; height: 100%; object-fit: cover;"
                                 alt="Profile Picture" />
                        }
                        else
                        {
                            <div id="avatarPlaceholder" class="bg-secondary d-flex align-items-center justify-content-center text-white h-100 w-100"
                                 style="font-size: 4rem;">
                                @Model.StudentProfile.FirstName?.FirstOrDefault()@Model.StudentProfile.LastName?.FirstOrDefault()
                            </div>
                            <img id="avatarPreview" class="d-none" style="width: 100%; height: 100%; object-fit: cover;" />
                        }

                        <div class="profile-overlay" onclick="triggerFileUpload()">
                            <i class="bi bi-camera-fill text-white fs-2"></i>
                        </div>
                    </div>
                    <p class="text-muted small mt-2" id="photoHelpText" style="display:none;">Click image to change</p>
                </div>

                <h4>@Model.StudentProfile.FirstName @Model.StudentProfile.LastName</h4>
                <p class="text-muted mb-1">Student</p>
                <p class="text-muted small">Student No: @Model.StudentProfile.StudentNumber</p>

                <div id="editTriggerBtn" class="mt-3">
                    <button type="button" class="btn btn-outline-primary w-100" onclick="enableEditMode()">
                        <i class="bi bi-pencil-square me-2"></i> Edit Profile
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Personal Information</h5>
                </div>

                <div class="card-body">

                    <div id="viewMode">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <small class="text-muted d-block">First Name</small>
                                <p class="fw-bold">@Model.StudentProfile.FirstName</p>
                            </div>
                            <div class="col-md-6">
                                <small class="text-muted d-block">Last Name</small>
                                <p class="fw-bold">@Model.StudentProfile.LastName</p>
                            </div>
                            <div class="col-md-6">
                                <small class="text-muted d-block">Email Address</small>
                                <p>@Model.StudentProfile.Email</p>
                            </div>
                            <div class="col-md-6">
                                <small class="text-muted d-block">Contact Number</small>
                                <p>@(string.IsNullOrEmpty(Model.StudentProfile.ContactNumber) ? "Not set" : Model.StudentProfile.ContactNumber)</p>
                            </div>
                            <div class="col-md-6">
                                <small class="text-muted d-block">Date of Birth</small>
                                <p>@(Model.StudentProfile.DateOfBirth?.ToString("yyyy-MM-dd") ?? "N/A")</p>
                            </div>
                            <div class="col-12">
                                <small class="text-muted d-block">Home Address</small>
                                <p>@(string.IsNullOrEmpty(Model.StudentProfile.Address) ? "Not set" : Model.StudentProfile.Address)</p>
                            </div>
                        </div>
                    </div>

                    <div id="editMode" class="d-none">
                        <form id="profileForm" method="post" enctype="multipart/form-data">
                            <div class="row g-3">

                                <input type="file" id="hiddenFileInput" asp-for="StudentProfile.ProfilePictureUrl" name="PhotoUpload" class="d-none" accept="image/*" onchange="previewImage(this)" />

                                <div class="col-md-6">
                                    <label class="form-label text-muted">First Name</label>
                                    <input type="text" class="form-control bg-light" value="@Model.StudentProfile.FirstName" disabled />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-muted">Last Name</label>
                                    <input type="text" class="form-control bg-light" value="@Model.StudentProfile.LastName" disabled />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-muted">Email Address</label>
                                    <input type="text" class="form-control bg-light" value="@Model.StudentProfile.Email" disabled />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-muted">Date of Birth</label>
                                    <input type="text" class="form-control bg-light" value="@(Model.StudentProfile.DateOfBirth?.ToString("yyyy-MM-dd") ?? "N/A")" disabled />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-muted">Student Number</label>
                                    <input type="text" class="form-control bg-light" value="@Model.StudentProfile.StudentNumber" disabled />
                                </div>

                                <div class="col-12 border-top pt-3 mt-2">
                                    <h6 class="text-primary mb-3">Editable Information</h6>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="StudentProfile.ContactNumber" class="form-label">Contact Number</label>
                                    <input asp-for="StudentProfile.ContactNumber"
                                           id="phoneInput"
                                           class="form-control"
                                           placeholder="09xxxxxxxxx"
                                           maxlength="11"
                                           oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                                    <span id="phoneError" class="text-danger d-none">Phone number must be exactly 11 digits.</span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="StudentProfile.Address" class="form-label">Home Address</label>
                                    <textarea asp-for="StudentProfile.Address" class="form-control" rows="3" placeholder="Enter home address"></textarea>
                                    <span asp-validation-for="StudentProfile.Address" class="text-danger"></span>
                                </div>

                                <div class="col-12 text-end mt-4">
                                    <button type="button" class="btn btn-secondary me-2" onclick="cancelEditMode()">
                                        Cancel
                                    </button>
                                    <button type="button" class="btn btn-success" onclick="validateAndSave()">
                                        <i class="bi bi-save me-2"></i> Save Changes
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function enableEditMode() {
            document.getElementById('viewMode').classList.add('d-none');
            document.getElementById('editMode').classList.remove('d-none');
            document.getElementById('editTriggerBtn').classList.add('d-none');
            document.getElementById('profileImgWrapper').classList.add('editable');
            document.getElementById('photoHelpText').style.display = 'block';
        }

        function cancelEditMode() {
            document.getElementById('viewMode').classList.remove('d-none');
            document.getElementById('editMode').classList.add('d-none');
            document.getElementById('editTriggerBtn').classList.remove('d-none');
            document.getElementById('profileImgWrapper').classList.remove('editable');
            document.getElementById('photoHelpText').style.display = 'none';

            document.getElementById('phoneError').classList.add('d-none');
            document.getElementById('phoneInput').classList.remove('border-danger');
        }

        function validateAndSave() {
            const phoneInput = document.getElementById('phoneInput');
            const phoneError = document.getElementById('phoneError');
            const phoneValue = phoneInput.value;

            if (phoneValue && phoneValue.length !== 11) {
                phoneError.classList.remove('d-none');
                phoneInput.classList.add('border-danger');
                return;
            } else {
                phoneError.classList.add('d-none');
                phoneInput.classList.remove('border-danger');
            }

            document.getElementById('profileForm').submit();
        }

        function triggerFileUpload() {
            if (document.getElementById('profileImgWrapper').classList.contains('editable')) {
                document.getElementById('hiddenFileInput').click();
            }
        }

        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    const img = document.getElementById('avatarPreview');
                    const placeholder = document.getElementById('avatarPlaceholder');
                    img.src = e.target.result;
                    img.classList.remove('d-none');
                    if(placeholder) placeholder.classList.add('d-none');
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}