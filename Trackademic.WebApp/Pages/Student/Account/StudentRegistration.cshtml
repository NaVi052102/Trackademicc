@page
@model Trackademic.WebApp.Pages.Student.Account.StudentRegistrationModel
@{
    ViewData["Title"] = "Student Profile Registration";
}

@section Styles {
    <link rel="stylesheet" href="~/css/student-registration.css" asp-append-version="true" />
}

<div class="row mt-4">

    <div class="col-12">

        <div class="mb-4">
            <h2>Student Profile Registration</h2>
            <p class="text-muted">Please provide your student credentials and account details.</p>
        </div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-person me-2"></i>
                        Basic Information
                    </h5>
                </div>
                <div class="card-body">

                    <div class="row">
                        <div class="col-lg-8">
                            <div class="row align-items-center">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.FirstName" class="form-label">First Name</label>
                                    <input asp-for="Input.FirstName" type="text" class="form-control" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.LastName" class="form-label">Last Name</label>
                                    <input asp-for="Input.LastName" type="text" class="form-control" />
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.Gender" class="form-label">Gender</label>
                                    <select asp-for="Input.Gender" asp-items="Model.GenderOptions" class="form-control">
                                        <option value="">-- Select Gender --</option>
                                    </select>
                                    <span asp-validation-for="Input.Gender" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.DateOfBirth" class="form-label">Date of Birth</label>
                                    <input asp-for="Input.DateOfBirth" type="date" class="form-control" />
                                    <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.Email" class="form-label">Email Address</label>
                                    <input asp-for="Input.Email" type="email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.ContactNumber" class="form-label">Contact Number</label>
                                    <input asp-for="Input.ContactNumber" type="tel" class="form-control" />
                                    <span asp-validation-for="Input.ContactNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4 text-center d-flex flex-column justify-content-center align-items-center">
                            <div class="profile-pic-placeholder mx-auto mb-3">
                                <span>(Profile)</span>
                            </div>
                            <label for="photoUpload" class="btn btn-sm btn-upload-photo">Upload Photo</label>
                            <input type="file" id="photoUpload" class="d-none">
                        </div>
                    </div>

                    <hr class="mt-4 mb-3" />
                    <div class="mb-3">
                        <label asp-for="Input.Address" class="form-label">Home Address</label>
                        <textarea asp-for="Input.Address" class="form-control" rows="3"></textarea>
                    </div>

                </div>
            </div>
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-person-vcard me-2"></i>
                        Student Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.StudentNumber" class="form-label">Student ID/Number</label>
                            <input asp-for="Input.StudentNumber" type="text" class="form-control" />
                            <span asp-validation-for="Input.StudentNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.YearLevel" class="form-label">Year Level</label>
                            <input asp-for="Input.YearLevel" type="text" class="form-control" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.CourseProgram" class="form-label">Course / Program</label>
                            <input asp-for="Input.CourseProgram" type="text" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6 border-end">
                            <h5 class="mb-3 d-flex align-items-center">
                                <i class="bi bi-lock me-2"></i> Account Information
                            </h5>
                            <div class="mb-3">
                                <label asp-for="Input.Username" class="form-label">Username</label>
                                <input asp-for="Input.Username" type="text" class="form-control" />
                                <span asp-validation-for="Input.Username" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label">Password</label>
                                <input asp-for="Input.Password" class="form-control" type="password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <input asp-for="Input.Role" type="hidden" value="Student" />
                        </div>

                        <div class="col-lg-6 ps-lg-4">
                            <h5 class="mb-3 d-flex align-items-center">
                                <i class="bi bi-person-badge me-2"></i> Guardian Details
                            </h5>

                            <div class="mb-3">
                                <label asp-for="Input.GuardianName" class="form-label">Guardian's Name</label>
                                <input asp-for="Input.GuardianName" type="text" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.GuardianContactInfo" class="form-label">Guardian's Contact</label>
                                <input asp-for="Input.GuardianContactInfo" type="tel" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.GuardianAddress" class="form-label">Guardian's Address</label>
                                <input asp-for="Input.GuardianAddress" type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-end mb-4">
                <button type="submit" class="btn btn-lg btn-create-student">Create Student Account</button>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}