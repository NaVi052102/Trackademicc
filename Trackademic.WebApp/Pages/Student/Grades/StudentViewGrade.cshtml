@page
@model Trackademic.WebApp.Pages.Student.Grades.StudentViewGradeModel
@{
    ViewData["Title"] = "View Grades";
}

@section Styles {
    <style>
        /* --- PRINT STYLESHEET --- */
        /* FIX: Use double @@ to escape the Razor parser */
        @@media print {
            /* 1. Hide everything by default */
            body * {
                visibility: hidden;
            }
            /* 2. Unhide the specific printable area */
            #printableArea, #printableArea * {
                visibility: visible;
            }
            /* 3. Position the printable area at the top-left of the page */
            #printableArea {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                margin: 0;
                padding: 20px;
            }
            /* 4. Hide buttons and forms inside the printable area */
            .no-print {
                display: none !important;
            }
            /* 5. Formatting for the Table */
            .card {
                border: none !important;
                box-shadow: none !important;
            }

            table {
                width: 100% !important;
                border-collapse: collapse !important;
            }

            th, td {
                border: 1px solid #000 !important; /* Add borders for readability */
                padding: 8px !important;
                color: black !important;
            }
            /* Ensure badges turn into plain text colors or borders */
            .badge {
                border: 1px solid #000 !important;
                color: #000 !important;
                background: none !important;
            }
        }
    </style>
}

<div class="container-fluid p-4" id="printableArea">

    <div class="d-flex justify-content-between align-items-center mb-4 no-print">
        <h2 class="fw-bold text-dark">My Grades</h2>
    </div>

    <div class="d-none d-print-block mb-4 text-center">
        <h2>Trackademic Grade Report</h2>
        <h4 class="text-muted">Student: @(User.Identity?.Name ?? "Student")</h4>
        <p class="mb-0"><strong>School Year:</strong> @Model.SchoolYear &nbsp;|&nbsp; <strong>Semester:</strong> @Model.Semester</p>
        <hr />
    </div>

    <div class="card shadow-sm mb-4 border-0 no-print">
        <div class="card-body bg-light rounded">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label fw-bold text-secondary">School Year</label>
                    <select asp-for="SchoolYear" asp-items="Model.SchoolYears" class="form-select shadow-sm"></select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold text-secondary">Semester</label>
                    <select asp-for="Semester" asp-items="Model.Semesters" class="form-select shadow-sm"></select>
                </div>

                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100 shadow-sm">
                        <i class="bi bi-filter me-2"></i> Filter
                    </button>
                </div>

                <div class="col-md-2">
                    <button type="button" class="btn btn-secondary w-100 shadow-sm" onclick="window.print()">
                        <i class="bi bi-printer me-2"></i> Print PDF
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row mb-4 g-3">
        <div class="col-md-3 col-6">
            <div class="card bg-primary text-white shadow-sm border-0 h-100 print-card-fix">
                <div class="card-body text-center">
                    <h6 class="card-title opacity-75">Semester GPA</h6>
                    <h2 class="display-6 fw-bold mb-0">@Model.SemesterGPA.ToString("0.00")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card bg-white shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h6 class="card-title text-muted">Total Units</h6>
                    <h2 class="display-6 fw-bold text-dark mb-0">@Model.TotalUnits</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card bg-success text-white shadow-sm border-0 h-100 print-card-fix">
                <div class="card-body text-center">
                    <h6 class="card-title opacity-75">Subjects Passed</h6>
                    <h2 class="display-6 fw-bold mb-0">@Model.SubjectsPassed</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card bg-danger text-white shadow-sm border-0 h-100 print-card-fix">
                <div class="card-body text-center">
                    <h6 class="card-title opacity-75">Subjects Failed</h6>
                    <h2 class="display-6 fw-bold mb-0">@Model.SubjectsFailed</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 no-print">
            <h5 class="mb-0 fw-bold text-primary">
                <i class="bi bi-journal-bookmark-fill me-2"></i> Enrolled Subjects
            </h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th class="ps-4 py-3">Subject Code</th>
                        <th class="py-3">Description</th>
                        <th class="py-3 text-center">Units</th>
                        <th class="py-3 text-center">Midterm</th>
                        <th class="py-3 text-center">Final</th>
                        <th class="py-3 text-center">Final Grade</th>
                        <th class="py-3 text-center">Remarks</th>
                        <th class="py-3">Faculty</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.GradeList.Any())
                    {
                        @foreach (var item in Model.GradeList)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-primary">@item.SubjectCode</td>
                                <td>@item.Description</td>
                                <td class="text-center">@item.Units</td>

                                <td class="text-center text-muted">
                                    @(item.Midterm == "N/A" ? "-" : item.Midterm)
                                </td>

                                <td class="text-center text-muted">
                                    @(item.FinalTerm == "N/A" ? "-" : item.FinalTerm)
                                </td>

                                <td class="text-center fw-bold fs-6">
                                    @if (item.FinalGrade == "N/A")
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                    else
                                    {
                                        <span class="text-dark">@item.FinalGrade</span>
                                    }
                                </td>

                                <td class="text-center">
                                    @if (item.Remarks == "Passed")
                                    {
                                        <span class="badge bg-success-subtle text-success border border-success px-3 rounded-pill">Passed</span>
                                    }
                                    else if (item.Remarks == "Failed")
                                    {
                                        <span class="badge bg-danger-subtle text-danger border border-danger px-3 rounded-pill">Failed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark border px-3 rounded-pill">@item.Remarks</span>
                                    }
                                </td>
                                <td class="text-muted small">
                                    @if (item.Faculty != "TBA")
                                    {
                                        <i class="bi bi-person-circle me-1"></i>
                                        @item.Faculty
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">TBA</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-5 text-muted">
                                <i class="bi bi-folder-x display-4 d-block mb-3"></i>
                                No grades found for the selected school year and semester.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>