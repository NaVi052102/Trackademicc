                        else
                        {
                            <!-- Fallback Login button if session expires -->
                            <a class="btn btn-outline-secondary btn-sm" asp-page="/Account/Login">Login</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3 pt-4">
            @RenderBody()
        </main>
