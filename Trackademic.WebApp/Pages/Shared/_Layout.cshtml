<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trackademic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Trackademic.WebApp.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom sticky-top border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                    <img src="~/images/trackademic-logo.svg" alt="Trackademic Logo" class="logo-img">
                    <span class="brand-text">Trackademic</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">

                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0 navbar-center-absolute">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" asp-area="" asp-page="/Student/StudentDashboard">Student Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" asp-area="" asp-page="/Student/Grades/StudentViewGrade">View Grades</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" asp-area="" asp-page="/Student/Class/StudentClass">Classes</a>
                            </li>
                        }
                    </ul>

                    <div class="d-flex align-items-center ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <a class="profile-trigger" href="#" role="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="~/images/user-profile-logo.svg" alt="Profile" class="profile-img rounded-circle border">
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end shadow border-0" aria-labelledby="profileDropdown">
                                    <li><h6 class="dropdown-header">Account</h6></li>

                                    <li>
                                        <a class="dropdown-item" asp-page="/Student/Profile/StudentProfile">
                                            <i class="bi bi-person me-2"></i> My Profile
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form class="w-100" asp-page="/Account/Logout" method="post">
                                            <button type="submit" class="dropdown-item text-danger d-flex align-items-center">
                                                <i class="bi bi-box-arrow-right me-2"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="btn btn-outline-secondary btn-sm" asp-page="/Account/Login">Login</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3 pt-4">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>