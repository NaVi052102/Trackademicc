                                <!-- Removed 'dropdown-toggle' class and the chevron icon element -->
                                <a class="profile-trigger" href="#" role="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="~/images/user-profile-logo.svg" alt="Profile" class="profile-img rounded-circle border">
