<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trackademic</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Trackademic.WebApp.styles.css" asp-append-version="true" />

    <style>
        /* --- Consistent Header Styling --- */

        /* Brand Logo & Text */
        a.navbar-brand {
            white-space: normal;
            text-align: center;
            word-break: break-all;
        }

        /* Navigation Links - Default State */
        .navbar-nav .nav-link {
            font-weight: 400;
            color: #2D586B !important; /* Brand Color */
            transition: font-weight 0.1s ease-in-out, color 0.1s ease-in-out;
        }

            /* Hover State */
            .navbar-nav .nav-link:hover {
                font-weight: 700 !important;
                color: #61A39D !important;
            }

            /* Active State */
            .navbar-nav .nav-link.active,
            .nav-pills .nav-link.active,
            .nav-pills .show > .nav-link {
                color: #2D586B !important;
                font-weight: 700 !important;
                border-bottom: 2px solid #2D586B;
            }

        /* Dropdown Items */
        .dropdown-item.active-dropdown-item,
        .dropdown-item.active-dropdown-item:hover {
            color: #fff !important;
            background-color: #2D586B !important;
            font-weight: 700;
        }

        .dropdown-item:hover {
            background-color: #f8f9fa;
            color: #61A39D;
        }

        /* Layout Helpers */
        .border-top {
            border-top: 1px solid #e5e5e5;
        }

        .border-bottom {
            border-bottom: 1px solid #e5e5e5;
        }

        .box-shadow {
            box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05);
        }

        .logout-btn {
            background: none;
            border: none;
            padding: 0;
            margin: 0;
            cursor: pointer;
            display: flex;
            align-items: center;
            color: #dc3545 !important;
            font-weight: 500;
        }

            .logout-btn:hover {
                color: #bb2d3b !important;
                font-weight: 700;
            }
    </style>

</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-custom sticky-top border-bottom box-shadow mb-3 bg-white">
            <div class="container-fluid">

                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-page="/Index">
                    <img src="~/images/trackademic-logo.png"
                         alt="Trackademic"
                         class="logo-img"
                         style="height: 40px; width: auto; object-fit: contain;">
                    <span class="brand-text fw-bold" style="color: #2D586B; font-size: 1.25rem;">Trackademic</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">

                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0 navbar-center-absolute gap-4">

                        @{
                            var currentPage = ViewContext.RouteData.Values["page"]?.ToString() ?? string.Empty;
                        }

                        <li class="nav-item">
                            <a class="nav-link @(currentPage.Contains("/Admin/Dashboard") ? "active" : "")"
                               asp-area="" asp-page="/Admin/Dashboard">Dashboard</a>
                        </li>

                        <li class="nav-item dropdown">
                            @{
                                var studentMgmtActive = currentPage.Contains("/Admin/Students");
                            }
                            <a class="nav-link dropdown-toggle @(studentMgmtActive ? "active" : "")"
                               href="#" id="studentManagementDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Student Management
                            </a>
                            <ul class="dropdown-menu shadow border-0" aria-labelledby="studentManagementDropdown">
                                <li>
                                    <a class="dropdown-item @(currentPage == "/Admin/Students/Manage" ? "active-dropdown-item" : "")"
                                       asp-area="" asp-page="/Admin/Students/Manage">Manage Students</a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(currentPage == "/Admin/Students/Add" ? "active-dropdown-item" : "")"
                                       asp-area="" asp-page="/Admin/Students/Add">Add New Student</a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            @{
                                var teacherMgmtActive = currentPage.Contains("/Admin/Teachers");
                            }
                            <a class="nav-link dropdown-toggle @(teacherMgmtActive ? "active" : "")"
                               href="#" id="teacherManagementDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Teacher Management
                            </a>
                            <ul class="dropdown-menu shadow border-0" aria-labelledby="teacherManagementDropdown">
                                <li>
                                    <a class="dropdown-item @(currentPage == "/Admin/Teachers/Manage" ? "active-dropdown-item" : "")"
                                       asp-area="" asp-page="/Admin/Teachers/Manage">Manage Teachers</a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(currentPage == "/Admin/Teachers/Add" ? "active-dropdown-item" : "")"
                                       asp-area="" asp-page="/Admin/Teachers/Add">Add New Teacher</a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            @{
                                var classMgmtActive = currentPage.Contains("/Admin/Curriculum");
                            }
                            <a class="nav-link dropdown-toggle @(classMgmtActive ? "active" : "")"
                               href="#" id="classManagementDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Curriculum Management
                            </a>
                            <ul class="dropdown-menu shadow border-0" aria-labelledby="classManagementDropdown">
                                <li>
                                    <a class="dropdown-item @(currentPage == "/Admin/Curriculum/Curriculum" ? "active-dropdown-item" : "")"
                                       asp-area="" asp-page="/Admin/Curriculum/Curriculum">Course</a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(currentPage == "/Admin/Curriculum/Classes" ? "active-dropdown-item" : "")"
                                       asp-area="" asp-page="/Admin/Curriculum/Classes">Classes</a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(currentPage == "/Admin/Curriculum/Grades" ? "active-dropdown-item" : "")"
                                       asp-area="" asp-page="/Admin/Curriculum/Grades">Grade</a>
                                </li>
                            </ul>
                        </li>

                    </ul>

                    <div class="d-flex align-items-center ms-auto">
                        <form class="form-inline" asp-page="/Account/Logout" method="post">
                            <button type="submit" class="logout-btn nav-link">
                                <i class="bi bi-box-arrow-right me-2"></i> Logout
                            </button>
                        </form>
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3 pt-4">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>