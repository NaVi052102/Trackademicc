<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trackademic</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Trackademic.styles.css" asp-append-version="true" />

    <style>
        /* Please see documentation at https://learn.microsoft.com/aspnet/core/client-side/bundling-and-minification
                for details on configuring this project to bundle and minify static web assets. */

        a.navbar-brand {
            white-space: normal;
            text-align: center;
            word-break: break-all;
        }

        a {
            color: #0077cc;
        }

        .btn-primary {
            color: #fff;
            background-color: #1b6ec2;
            border-color: #1861ac;
        }

        /* --- Navigation Link Styling --- */
        .navbar-nav .nav-link {
            font-weight: 400; /* Regular weight by default */
            transition: font-weight 0.1s ease-in-out;
        }

            /* Hover: Bolds the text */
            .navbar-nav .nav-link:hover {
                font-weight: 700 !important; /* Bold on hover */
            }

            /* Active: Stays bold and uses primary colors */
            .nav-pills .nav-link.active, .nav-pills .show > .nav-link,
            .navbar-nav .nav-link.active {
                color: #fff !important;
                background-color: #1b6ec2;
                border-color: #1861ac;
                font-weight: 700; /* Stays Bold when active */
            }
                /* Make sure active text-dark links use the white color defined above */
                .navbar-nav .nav-link.active.text-dark {
                    color: #fff !important;
                }

        .border-top {
            border-top: 1px solid #e5e5e5;
        }

        .border-bottom {
            border-bottom: 1px solid #e5e5e5;
        }

        .box-shadow {
            box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05);
        }

        button.accept-policy {
            font-size: 1rem;
            line-height: inherit;
        }

        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px;
        }

        /* FIX: Ensure the logout button looks exactly like a link */
        .logout-btn {
            background: none;
            border: none;
            padding: 0;
            margin: 0;
            cursor: pointer;
            display: flex; /* Aligns icon and text */
            align-items: center;
        }
    </style>

</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Trackademic</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- Main Navigation Links (Centered using mx-auto) -->
                    <ul class="navbar-nav mx-auto">

                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["page"].ToString().Contains("/Teachers/Dashboard") ? "active" : "")"
                               asp-area="" asp-page="/Teachers/Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["page"].ToString().Contains("/Teachers/Classes") ? "active" : "")"
                               asp-area="" asp-page="/Teachers/Classes">Classes</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["page"].ToString().Contains("/Teachers/Grades") ? "active" : "")"
                               asp-area="" asp-page="/Teachers/Grades">Grades</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["page"].ToString().Contains("/Teachers/Profile") ? "active" : "")"
                               asp-area="" asp-page="/Teachers/Profile">Profile</a>
                        </li>

                    </ul>

                    <!-- Logout Button -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <!-- Secure Logout Form -->
                            <form class="form-inline" asp-page="/Account/Logout" method="post">
                                <button type="submit" class="nav-link text-danger logout-btn">
                                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>