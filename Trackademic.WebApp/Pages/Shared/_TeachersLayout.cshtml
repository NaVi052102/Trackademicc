<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trackademic</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Trackademic.styles.css" asp-append-version="true" />

    <style>
        /* Please see documentation at https://learn.microsoft.com/aspnet/core/client-side/bundling-and-minification
                for details on configuring this project to bundle and minify static web assets. */

        a.navbar-brand {
            white-space: normal;
            text-align: center;
            word-break: break-all;
        }

        /* --- Trackademic Wordmark Styling --- */
        a.navbar-brand.logo-wordmark {
            font-family: Arial, sans-serif;
            font-size: 1.5rem;
            font-weight: 700;
            color: #2D586B; /* Darker color for the first part (Track) */
        }

        a.navbar-brand.logo-wordmark span {
            color: #61A39D; /* Lighter color for the second part (ademic) */
            font-weight: 500;
        }

        /* Global Link Color */
        a {
            color: #2D586B;
            text-decoration: none;
        }

        /* --- BUTTON STYLING (Matches Admin) --- */
        
        /* 1. Base State (Normal) */
        .btn-primary {
            color: #fff;
            background-color: #2D586B; 
            border-color: #2D586B;
            font-weight: 400 !important; /* Ensure NORMAL weight (No Bold) */
        }

        /* 2. Hover State - COLOR CHANGE ONLY */
        .btn-primary:hover {
            color: #fff;
            background-color: #61A39D !important; /* Change background to lighter color */
            border-color: #61A39D !important;     /* Change border to lighter color */
            font-weight: 400 !important;           /* STRICTLY NO BOLD */
        }

        /* 3. Active/Focus State */
        .btn-primary:active, 
        .btn-primary:focus, 
        .btn-primary:focus:active {
            background-color: #2D586B !important;
            border-color: #2D586B !important;
            box-shadow: 0 0 0 0.25rem rgba(45, 88, 107, 0.5) !important;
        }

        /* --- Navigation Link Styling --- */
        .navbar-nav .nav-link {
            font-weight: 400; /* Normal weight */
            transition: color 0.1s ease-in-out;
        }

        /* HOVER: REMOVED BOLDING, added simple color shift instead */
        .navbar-nav .nav-link:hover {
            font-weight: 400 !important; /* STRICTLY NO BOLD */
            color: #61A39D !important;   /* Matches button hover color */
        }

        /* Active Nav Link */
        .nav-pills .nav-link.active, 
        .nav-pills .show > .nav-link,
        .navbar-nav .nav-link.active {
            color: #fff !important;
            background-color: #2D586B;
            border-color: #2D586B;
            font-weight: 400 !important; /* STRICTLY NO BOLD */
        }

        .navbar-nav .nav-link.active.text-dark {
            color: #fff !important;
        }
        
        /* General Overrides for Focus Rings */
        .btn:focus, .form-control:focus, .form-select:focus, .dropdown-toggle:focus {
            outline: 0;
            box-shadow: 0 0 0 0.25rem rgba(45, 88, 107, 0.5);
        }

        .border-top { border-top: 1px solid #e5e5e5; }
        .border-bottom { border-bottom: 1px solid #e5e5e5; }
        .box-shadow { box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05); }
        
        button.accept-policy {
            font-size: 1rem;
            line-height: inherit;
        }

        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px;
        }

        /* FIX: Ensure the logout button looks exactly like a link */
        .logout-btn {
            background: none;
            border: none;
            padding: 0;
            margin: 0;
            cursor: pointer;
            display: flex; 
            align-items: center;
        }
    </style>

</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand logo-wordmark" asp-area="" asp-page="/Index">Track<span class="logo-text-two">ademic</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav mx-auto">

                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["page"]?.ToString().Contains("/Teachers/Dashboard") == true ? "active" : "")"
                               asp-area="" asp-page="/Teachers/Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["page"]?.ToString().Contains("/Teachers/Classes") == true ? "active" : "")"
                               asp-area="" asp-page="/Teachers/Classes">Classes</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["page"]?.ToString().Contains("/Teachers/Grades") == true ? "active" : "")"
                               asp-area="" asp-page="/Teachers/Grades">Grades</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["page"]?.ToString().Contains("/Teachers/Profile") == true ? "active" : "")"
                               asp-area="" asp-page="/Teachers/Profile">Profile</a>
                        </li>

                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <form class="form-inline" asp-page="/Account/Logout" method="post">
                                <button type="submit" class="nav-link text-danger logout-btn">
                                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
